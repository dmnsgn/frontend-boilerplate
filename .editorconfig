# editorconfig.org
root = true

[*]
indent_style = tab
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{js,cjs,mjs,jsx,ts,tsx,json,css,pcss,postcss,scss,less,vert,frag,glsl,svg,xml}]
indent_style = space
indent_size = 2

[*.{styl}]
indent_style = tab
indent_size = 2
